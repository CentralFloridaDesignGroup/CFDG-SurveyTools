<Window x:Class="SurveyCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurveyCalculator"
        xmlns:uc="clr-namespace:SurveyCalculator.uc"
        mc:Ignorable="d"
        Height="500" Width="600" ResizeMode="NoResize"
        Title="Survey Calculator">
    <TabControl TabStripPlacement="Top" x:Name="TabController" FontSize="20">
        <TabItem Header="Slope by Points">
            <uc:SlopeDistanceByPoints/>
        </TabItem>
        <TabItem Header="Slope By Distance">
            <uc:SlopeByElevation/>
        </TabItem>
    </TabControl>
</Window>
